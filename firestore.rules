rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Toto pravidlo povolí čítanie a zápis pre všetkých prihlásených používateľov.
    // Pre produkciu neskôr môžeme pravidlá sprísniť (napr. iba vlastné dokumenty).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
